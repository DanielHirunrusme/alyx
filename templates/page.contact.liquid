<div class="page wrapper wrapper-slim">
	
	<div class="section-header">
	  <h1>{{ page.title }}</h1>
	</div>
	
	<div class="page-content full">
		<div class="rte">
		  {{ page.content }}
      
    	{% if settings.enable_contact_form %}
    	  {% form 'contact' %}
	
    	    {% if form.posted_successfully? %}
    	      <p class="note form-success">
    	        {{ 'contact.form.post_success' | t }}
    	      </p>
    	    {% endif %}
	
    	    {{ form.errors | default_errors }}
			
    			<div class="field-wrap">
    		    {% assign name_attr = 'contact.form.name' | t | handle %}
    		    <label for="ContactFormName" class="label--hidden label">{{ 'contact.form.name' | t }}</label>
    		    <input type="text" required="required" id="ContactFormName" name="contact[{{ name_attr }}]" placeholder="{{ 'contact.form.name' | t }}" autocapitalize="words" value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.name }}{% endif %}">
    			</div>
			
    			<div class="field-wrap">
    		    <label for="ContactFormEmail" class="label--hidden label">{{ 'contact.form.email' | t }}</label>
    		    <input type="email" required="required" id="ContactFormEmail" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
    			</div>
			
    			<div class="field-wrap">
    		    {% assign name_attr = 'contact.form.phone' | t | handle %}
    		    <label for="ContactFormPhone" class="label--hidden label">{{ 'contact.form.phone' | t }}</label>
    		    <input type="tel" id="ContactFormPhone" name="contact[{{ name_attr }}]" placeholder="{{ 'contact.form.phone' | t }}" pattern="[0-9\-]*" value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.phone }}{% endif %}">
    			</div>
          
    			<div class="field-wrap">
    		    <label for="ContactFormSubject" class="label--hidden label">{{ 'contact.form.subject' | t }}</label>
    		    <input type="text" required="required" id="ContactFormSubject" name="contact[subject]" placeholder="{{ 'contact.form.subject' | t }}" autocorrect="off" autocapitalize="off" value="">
    			</div>
	
    			<div class="field-wrap textarea-wrap field-break">
    		    <textarea rows="10" required="required" id="ContactFormMessage" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>
    			</div>
			
    			<div class="field-wrap btn-wrap btn-container">
    		    <input type="submit" class="btn" value="{{ 'contact.form.send' | t }}">
    			</div>
	
    	  {% endform %}
    	{% endif %}
      
		</div>
	</div>

</div>
