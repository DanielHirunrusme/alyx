  {%- assign text = settings['home_video_text'] -%}
  {%- assign btn = settings['home_video_btn'] -%}
  {%- assign link = settings['home_video_link'] -%}
  {%- assign position_x = settings['home_video_x'] -%}
  {%- assign position_y = settings['home_video_y'] -%}
  {%- assign color = settings['home_video_color'] -%}
  {%- assign mp4 = settings['home_video_mp4'] -%}
  {%- assign webm = settings['home_video_webm'] -%}
  {%- assign ogv = settings['home_video_ogv'] -%}

  {%- if mp4 != blank or webm != blank or ogv != blank -%}
  <section id="home-video" class="section-video" data-timestamp="true" data-module-init="home-hero video" data-mp4="{{ settings.home_video_mp4 }}" data-webm="{{ settings.home_video_webm }}" data-ogv="{{ settings.home_video_ogv }}" data-poster="{{ settings.home_video_poster | img_url: 'master' }}">
  	<div class="billboard">
  		<div class="billboard-bg-video">
  			{%- if headline != blank or text != blank or btn != blank -%}
  				{%- include 'billboard-text' with 'video' -%}
  			{%- endif -%}
  		</div>
  	</div>
  </section>
  {%- endif -%}
  {% endif %}
  
  <div class="logo" style="margin-left:-{{ settings.logo_max_width | divided_by:2 }}px" itemscope itemtype="http://schema.org/Organization">
    {% if settings.logo_use_image %}
      <a href="/#shop" itemprop="url" style="width:{{ settings.logo_max_width }}px;">{% if settings.logo.svg != '' %}{{ settings.logo_svg }}{% else %}<img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" itemprop="logo">{% endif %}</a>
    {% else %}
      <a href="/" itemprop="url">{{ shop.name }}</a>
    {% endif %}
  </div>
  
  <main class="main-content" id="shop" role="main">
    {% include 'header' %}
    <div class="main-wrapper">
      <div id="main-dummy" class="main-dummy"></div>
      <script>
        var dummy = document.getElementById('main-dummy');
        var header_height = document.getElementById('app-header').offsetHeight;
        dummy.style.height = header_height + 'px';
        setTimeout(function(){
          $('#main-dummy').css('height', $('#app-header').outerHeight())
        }, 100)
      </script>
      {{ content_for_layout }}
      <div class="search-results-ajax-container wrapper collection-wrapper">
        <div class="live-search-results grid-wrapper"></div>
      </div>
    </div>
    {% include "footer" %}
  </main>
  
  
  
