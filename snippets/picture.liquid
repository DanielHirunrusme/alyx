{% assign image = image %}

<picture>
  <!--[if IE 9]><video style="display: none;"><![endif]-->
  <source srcset="{{ image | img_url: '2048x2048' }}" media="(min-width: 2000px)">
  <source srcset="{{ image | img_url: '1024x1024' }}" media="(min-width: 1000px)">
  <source srcset="{{ image | img_url: 'grande' }}" media="(min-width: 600px)">
  <!--[if IE 9]></video><![endif]-->
  <img srcset="{{ image | img_url: 'large' }}"  alt="{{ img.alt | escape }}">
</picture>