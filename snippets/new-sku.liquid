{%- endif -%}
{%- if sku_size > 9 -%}
{%- assign str5 = sku | slice: 9 | append: '-' -%}
{%- assign str6 = sku | slice: 10,11 -%}
{%- else -%}
{%- assign str5 = '' -%}
{%- assign str6 = '' -%}
{%- endif -%}
