{% if linklists.account.size > 0 %}
<div class="overflow-container account-tier subnav-container nav-container">
<ul class="account-subnav subnav">
  {% if shop.customer_accounts_enabled %}
    {% if customer %}
      <!--<li class="desktop-only {% if template contains 'customers' %}active {% endif %}"><a class="icon icon-account" href="/account">Account</a></li>-->
      <li data-module="login" class="desktop-only account-module-trigger over {% if template contains 'logged' %}active {% endif %}"><a href="/account">{{ customer.email }}</a></li>
      <li class="desktop-only">{{ 'layout.customer.log_out' | t | customer_logout_link }}</li>
    {% else %}
      <li data-module="login" class="desktop-only account-module-trigger over {% if template contains 'login' %}active {% endif %}"><a href="/account/login">Login</a></li>
      <li data-module="register" class="desktop-only account-module-trigger {% if template contains 'register' %}active {% endif %}"><a href="/account/register">Register</a></li>
    {% endif %}
  {% endif %}
  
  {% for link in linklists.account.links %}
    {% if link.title != 'Wishlist' and link.title != 'Purchase History' and link.title != 'Recently Viewed' %}
      <li class="{% if link.active %}active{% endif %}"><a href="{{ link.url }}">{{ link.title }}</a></li>
    {% elsif link.title == 'Recently Viewed' %}
      <li data-module="recently-viewed" class="account-module-trigger {% if link.active %}active{% endif %}"><a href="{{ link.url }}">{{ link.title }}</a></li>
    {% elsif link.title == 'Wishlist' and customer %}
      <li data-module="wishlist" class="account-module-trigger wishlist-link {% if link.active %}active{% endif %}"><a  class="wk-link-dummy" href="{{ link.url }}">{{ link.title }}</a><!-- include 'wishlist-link' --></li>
    {% elsif link.title == 'Purchase History' %}
      {% if customer %}<li data-module="purchase-history" class="account-module-trigger {% if link.active %}active{% endif %}"><a href="{{ link.url }}">{{ link.title }}</a></li>{% endif %}
    {% else %}
      {% if customer %}
        <li  data-module="wishlist" class="account-module-trigger wishlist-link {% if template contains 'wishlist' %}active{% endif %}"><a href="/pages/wishlist" class="wk-link-dummy" title="View Wishlist">Wishlist</a><!-- include 'wishlist-link' --></li>
        <script>
          // to prevent the wishlist link from jumping
          $('.wishlist-link').bind("DOMSubtreeModified",function(){
            $('.wk-link-dummy').remove();
          });
        </script>
      {% endif %}
    {% endif %}
  
  {% endfor %}
  
</ul>
</div>


  <div class="account-module visible" data-module="login" {% if template contains 'login' or template contains 'account' %}style="display:block;"{% endif %}>
    {% if customer %}
      {% include 'account' %}
    {% else %}
      {% include 'login' %}
    {% endif %}
  </div>
  <div class="account-module" data-module="register" {% if template contains 'register' %}style="display:block;"{% endif %}>
    {% include 'register' %}
  </div>
  <div class="account-module" data-module="recently-viewed">
    {% include 'recently-viewed' %}
  </div>
  <div class="account-module" data-module="wishlist">
    <!-- include 'wishlist-collection' -->
  </div>
  <div class="account-module" data-module="purchase-history">
    {% include 'purchase-history' %}
  </div>

{% endif %}